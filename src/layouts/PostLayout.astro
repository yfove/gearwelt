---
import "../styles/blog.css";
import "../styles/global.css";
import Header from "../components/header4.astro";
import Footer from "../components/footer2.astro";
import Accordian from "../components/accordian.astro";
import Sidebar from "../components/sidebar.astro";
import Cta from "../components/cta.astro";
import Horizontalbar from "~/components/toptriple.astro";
import Horizontalbar2 from "~/components/guidesmin.astro";
import PostViews from "~/components/PostViews.astro";
import RelatedProducts from "../components/RelatedProducts.astro"; // Import the new component
import ExtraImages from '../components/ExtraImages.astro';

// add extra images


// Frontmatter for the current post
const { minutesRead } = Astro.props.frontmatter;
const {
frontmatter: {
title,
description,
pubDate,
pubTime,
image,
author,
credit,
slug,
buyLink,
product,
tags,
extraImages = [],
},
} = Astro.props;
// Use Astro.glob to fetch all the posts
const posts = await Astro.glob("../pages/post/**/*.mdx"); // Adjust the glob pattern if needed

// Ensure there are tags and get the first one
const firstTag = tags && tags.length > 0 ? tags[0] : null;

// Ensure there are tags
const relatedPosts = posts
.filter(
(post) =>
post.frontmatter.slug !== slug && // Exclude the current post
post.frontmatter.tags.some((tag) => tags.includes(tag)) // Check if any tag matches
)
.sort(() => Math.random() - 0.5) // Shuffle the posts randomly
.slice(0, 2); // Display only 2 posts

export const prerender = true;
---

<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" href="/watch.svg" type="image/svg+xml" />
</head>

<body class="h-min bg-white text-white">
  <Header />
  <div class="mx-auto flex min-h-screen max-w-5xl border mt-2 p-5 pt-10 shadow-md flex-col md:flex-row">
    <main class="w-full md:w-3/4 font-normal tracking-wider text-gray-900">
      <a href="javascript:history.back()" class="text-black">Back to Previous</a>
      <a class="text-black">| {title}</a>
      <article class="mdx">
        <div class="flex flex-col items-start space-y-1">
          <h1 class="font-bold tracking-tighter text-4xl" style="font-family: 'Josefin Sans', sans-serif;">
            {title}
          </h1>
          <div class="flex w-full justify-between text-gray-900">
            <small class="text-stone-500">Written by: &#x270E; {author}</small>
            <small class="text-right">&#10711; {minutesRead}
              <PostViews slug={slug} />
            </small>
          </div>
        </div>

        <br />
        <div class="article-body">
          {image && <img class="w-full object-cover max-h-96" src={image} alt="" />}
          <small class="text-stone-700">
            Published on: {pubTime} â€¢
            {pubDate && <time class="mt-2 inline-block">{pubDate}</time>}
            {credit}
          </small>

          <!-- Render Tags -->
          <div class=" space-x-2">
            {
            tags &&
            tags.map((tag, index) => (
            <span key={index} class="text-sm">
              <a href={`/tags/${tag.toLowerCase()}`} style="text-decoration: none; color: #3c3734">
                {tag}
              </a>
              {index < tags.length - 1 && ( <span class="mx-1 text-stone-400">|</span>
            )}
            </span>
            ))
            }
          </div>

          <hr class="my-4 border-t-2" />
          <slot class="mdx" />
          <br>
          {/* Extra images grid */}
          <ExtraImages images={extraImages} />

        </div>
      </article>

      {/* Conditionally render the buyLink */}
      {
      buyLink && (
      <div class="mt-6">
        <a href={buyLink} class="text-amber-500 hover:text-amber-700 font-bold">
          Buy the {product}
        </a>
      </div>
      )
      }

      <br />
      <a href="javascript:history.back()" class="text-black">Back to Previous</a>
      <span>|</span>
      <a href="/" class="text-black">Back to Home</a>

      <RelatedProducts tags={tags} relatedPosts={relatedPosts} />
    </main>

    <div class="sidebar-container md:w-1/4 w-full hidden md:flex flex-col">
      <Sidebar />
    </div>
  </div>

  <!-- Accordion component -->
  <Accordian />

  {/* Call to action social media component */}
  <Cta />
  <Horizontalbar2 />
  <Horizontalbar />
</body>

</html>

<Footer />