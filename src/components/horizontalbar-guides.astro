---
const guides = await Astro.glob("../pages/guides/**/*.mdx");
---

<div class="mx-auto my-10 max-w-6xl">
  <div class="recent-posts m-3">
    <div class="heading mx-3 mb-4">
      <a href="/guides">
        <h2 class="text-center text-black">Ultimate Gear Guide</h2>
      </a>
      <hr class="w-full border-t border-black" />
    </div>
    <div class="grid grid-cols-[repeat(5,minmax(0,1fr))] gap-8">
      <!-- Loop with images -->
      {
        guides
          .reverse()
          .slice(0, 5)
          .map((guide) => (
            <div key={guide.frontmatter.slug} class="p-4">
              <a href={"/guides/" + guide.frontmatter.slug} class="block">
                <p class="font-semibold text-black text-lg">
                  {guide.frontmatter.title}
                </p>
                <p class="text-black text-sm">
                  {guide.frontmatter.description}
                </p>
                <small class="text-black text-xs">
                  {guide.frontmatter.pubDate}
                </small>
              </a>
            </div>
          ))
      }
    </div>
  </div>
</div>
